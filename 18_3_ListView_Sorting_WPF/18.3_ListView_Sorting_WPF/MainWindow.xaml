<Window x:Class="_18._3_ListView_Sorting_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_18._3_ListView_Sorting_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListView x:Name="lsvMain" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Width="40" DisplayMemberBinding="{Binding Stt}">
                        <GridViewColumnHeader  Click="GridViewColumnHeader_Click_2">Stt</GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn  Width="200" DisplayMemberBinding="{Binding Name}">
                        <GridViewColumnHeader  Click="GridViewColumnHeader_Click_2">Name</GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn Width="250" DisplayMemberBinding="{Binding Mail}">
                        <GridViewColumnHeader  Click="GridViewColumnHeader_Click_2"> Mail</GridViewColumnHeader>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
