<Window x:Class="_6.Canvas_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6.Canvas_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Button Content="btn1" FontSize="30" Width="150" Height="70" Canvas.Top="5"></Button>
        <Button Content="btn2" FontSize="30" Width="150" Height="70" Canvas.Top="5" Canvas.Right="5"></Button>
        <Button Content="btn3" FontSize="30" Width="150" Height="70" Canvas.Bottom="5"></Button>
        <!--setting Panel.ZIndex="1" bằng hệ số cao hơn thì nó sẽ hiển thị lên trên-->
        <Button Content="btn4" FontSize="30"  Width="150" Height="70" Canvas.Bottom="5" Canvas.Right="200" Panel.ZIndex="1"></Button>
        <Button Content="btn5" FontSize="30" Width="150" Height="70" Canvas.Bottom="40" Canvas.Right="100"></Button>

        <Ellipse Fill="Red" Width=" 150" Height="100" Canvas.Top="100"></Ellipse>
    </Canvas>
</Window>
