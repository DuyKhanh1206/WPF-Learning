<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:_14.Style_WPF">

    <Style TargetType="Button" x:Key="btnStyleFormResource_file">
        <Setter Property="Width" Value="150"></Setter>
        <Setter Property="Height" Value="50"></Setter>
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontStyle" Value="Oblique"></Setter>
    </Style>

    <Style TargetType="TextBox" x:Key="txtStyleFormResource_file">
        <Setter Property="Width" Value="150"></Setter>
        <Setter Property="Height" Value="50"></Setter>
        <Setter Property="Background" Value="RoyalBlue"></Setter>
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontStyle" Value="Oblique"></Setter>
    </Style>

</ResourceDictionary>