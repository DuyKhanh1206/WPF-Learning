<Window x:Class="_12.SliderBar_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12.SliderBar_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <!--Có thể đổi màu background và con trỏ cho đẹp-->
        <Slider x:Name="sldControlLight" Minimum="0" Maximum="999" Value="200" Margin="5" ></Slider>
        <TextBox x:Name="txtValue" Text="{Binding Path=Value,ElementName=sldControlLight}"></TextBox>
    </StackPanel>
</Window>
